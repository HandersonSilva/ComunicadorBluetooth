<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hb.handersonsilva.comunicadorbluetooth.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_StatusM"
        android:layout_alignBaseline="@+id/button_AtivarServer"
        android:layout_alignBottom="@+id/button_AtivarServer"
        android:layout_toRightOf="@+id/button_AtivarServer"
        android:layout_toEndOf="@+id/button_AtivarServer" />

    <TextView
        android:text="Servidor---------------------------------------------------------"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_Cliente_Conexao"
        android:layout_toRightOf="@+id/button_Cliente_Conexao"
        android:layout_toEndOf="@+id/button_Cliente_Conexao"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView_statusClient" />

    <Button
        android:text="Ativar Server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_AtivarServer"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_statusSocket"
        android:layout_below="@+id/textView_statusClient"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Cliente_Conexao"
        android:text="Cliente"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/button_AtivarServer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Cliente------------------------------------------------------------"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_statusClient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_gravar1142"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_gravarAudio" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mostraraudio1000"
        android:id="@+id/imageView_mostrarAudio"
        android:layout_below="@+id/textView_statusSocket"
        android:layout_toLeftOf="@+id/btn_gravarAudio"
        android:layout_toStartOf="@+id/btn_gravarAudio" />

    <TextView
        android:text="Desconectado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_Cliente_Conexao"
        android:layout_alignLeft="@+id/imageView_mostrarAudio"
        android:layout_alignStart="@+id/imageView_mostrarAudio"
        android:id="@+id/textView_statusConexao" />

</RelativeLayout>
